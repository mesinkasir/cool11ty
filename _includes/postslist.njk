<div reversed class="row postlist" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
{% for post in postslist | reverse %}
  <div class="col-md-4 p-3 p-md-3 mb-3 postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
    <a href="{{ post.url | url }}" class="postlist-link">
    <!--<img class="images img-fluid blur" width="360" height="200" src="{{ post.data.cover }}"/>-->
    <h4 class="mt-3">
    {% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</h3>
    <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time><br/>
    <p>{{ post.data.description }}</p></a>
    {% for tag in post.data.tags | filterTagList %}
      {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
      <a href="{{ tagUrl | url }}" class="post-tag text-white">#{{ tag }}</a>
    {% endfor %}
  </div>
{% endfor %}
</div>
